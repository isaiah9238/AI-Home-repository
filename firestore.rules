rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow the script (and you) to edit the primary_user
    match /users/primary_user {
      allow read, write: if true;
    }

    // Helper: Check if user is logged in (if you use Firebase Auth)
    function isSignedIn() {
      return request.auth != null;
    }

    // LOOPS: Allow anyone to read, but only let authenticated users write/delete
    match /loops/{loopId} {
      allow read: if true;
      allow write: if isSignedIn(); 
      
      // Lines subcollection
      match /lines/{lineId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
    
    // COMMENTS: Public can create, but let's prevent "Update" and "Delete"
    match /comments/{commentId} {
      allow get, list: if true;
      allow create: if true; 
      allow update, delete: if false; // Truly immutable
    }

    // DERIVATIVES: Write-only for history. 
    // Added a check to ensure the document being created isn't massive.
    match /derivatives/{derivativeId} {
      allow create: if request.resource.size < 5 * 1024; // Limit to 5KB to prevent bloat
      allow read, update, delete: if false;
    }

    match /workspaces/{workspaceId} {
    // Only the person who created the workspace can read or edit it
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
  
    // When creating, ensure they stamp their own UID as the owner
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
  }
}